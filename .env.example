# MCP Servers - Environment Configuration
# Copy this file to .env and customize for your environment

# Container Registry Configuration
REGISTRY=ghcr.io/cbwinslow
DOCKERHUB_USERNAME=cbwinslow
GITHUB_USERNAME=cbwinslow

# Authentication (for pushing images)
# GitHub Container Registry
GITHUB_TOKEN=

# Docker Hub
DOCKERHUB_TOKEN=
DOCKERHUB_PASSWORD=

# MCP Gateway Configuration
GATEWAY_HOST=localhost
GATEWAY_PORT=8080
GATEWAY_URL=http://localhost:8080

# Server Configuration
NODE_ENV=production

# Volume Mounts (customize paths)
FILESYSTEM_DATA_PATH=./data
GIT_REPOS_PATH=./repos

# Resource Limits (can be overridden in docker-compose.yml)
DEFAULT_MEMORY_LIMIT=512Mi
DEFAULT_CPU_LIMIT=500m

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Security
ENABLE_AUTH=false
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3
